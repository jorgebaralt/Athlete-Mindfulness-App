<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jorgebaralt.athlete_mindful_app.MainActivity"
    android:background="#3D9970"
    >

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        android:orientation="vertical"
        app:layout_constraintGuide_end="180dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="180dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        app:layout_constraintGuide_begin="283dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="283dp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnMental"
        android:layout_width="180dp"
        android:layout_height="283dp"
        android:text="Mental"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnPhysical"
        android:layout_marginStart="0dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toLeftOf="@+id/btnEmotional"
        android:layout_marginRight="0dp" />

    <Button
        android:id="@+id/btnEmotional"
        android:layout_width="180dp"
        android:layout_height="283dp"
        android:text="Emotional"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSocial"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/btnMental"
        android:layout_marginLeft="0dp"
        app:layout_constraintHorizontal_bias="0.5" />

    <Button
        android:id="@+id/btnPhysical"
        android:layout_width="180dp"
        android:layout_height="283dp"
        android:layout_marginBottom="0dp"
        android:text="Physical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMental"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintRight_toLeftOf="@+id/btnSocial"
        android:layout_marginRight="0dp" />

    <Button
        android:id="@+id/btnSocial"
        android:layout_width="180dp"
        android:layout_height="283dp"
        android:layout_marginBottom="0dp"
        android:text="Social"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="-17dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btnEmotional"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintLeft_toRightOf="@+id/btnPhysical"
        android:layout_marginLeft="0dp" />
</android.support.constraint.ConstraintLayout>
